#!/usr/bin/env bash

# Copyright (c) Jupyter Development Team.
# Distributed under the terms of the Modified BSD License.

source activate ${NB_PYTHON_PREFIX}

set -euxo pipefail

mkdir _reports_

# pre-install nodejs deps and build outside of editable python install
yarn                                            2>&1 | tee _reports_/00_yarn.txt
yarn build:dev:prod:minimize:report             2>&1 | tee _reports_/01_build.txt

# clean up 80mb file
rm dev_mode/stats.json

# hoist report to where a reviewer might see it
mv dev_mode/static/webpack-bundle-analyzer.html _reports_/

# assume best-effort versions from conda-forge for all deps
pip install -vv -e .[dev] --no-build-isolation  2>&1 | tee _reports_/02_pip_install.html
pip list                                        2>&1 | tee _reports_/03_pip_list.html
(pip check || echo FAIL)                        2>&1 | tee _reports_/04_pip_check.html

# copy config to a well-known location
mkdir -p ~/.jupyter/
cp binder/jupyter_config.py ~/.jupyter/

# until jupyter-server is the default on binder
cp ${NB_PYTHON_PREFIX}/bin/jupyter-lab ${NB_PYTHON_PREFIX}/bin/jupyter-notebook

# emit
jupyter troubleshoot                            2>&1 | tee _reports_/10_troubleshoot.txt
jupyter notebook --show-config                  2>&1 | tee _reports_/11_notebook_show_config.txt
jupyter lab --show-config                       2>&1 | tee _reports_/12_lab_show_config.txt
jupyter server extension list                   2>&1 | tee _reports_/13_server_extension_list.txt
jupyter labextension list                       2>&1 | tee _reports_/14_labextension_list.txt
