{
    "title": "JupyterLab License Metadata",
    "version": "0.1.0",
    "description": "JupyterLab third-party licenses report",
    "$schema": "http://json-schema.org/draft-07/schema",
    "$ref": "#/definitions/license-report",
    "definitions": {
        "license-report": {
            "description": "a full license report, likely including a core (e.g. JupyterLab) and some number of extensions",
            "type": "object",
            "additionalProperties": {
                "description": "A distribution name-keyed container of licenses, e.g. JupyterLab, or the name of a python extension",
                "$ref": "#/definitions/license-bundle"
            }
        },
        "license-bundle": {
            "type": "object",
            "required": [
                "licenses"
            ],
            "properties": {
                "licenses": {
                    "description": "the npm/yarn package.json-compatible name identifier. May be namespaced with @ or even a url",
                    "additionalProperties": {
                        "$ref": "#/definitions/license-spec"
                    }
                }
            }
        },
        "license-spec": {
            "description": "a specification of a license extended by the bundled third-party library",
            "type": "object",
            "required": [
                "version",
                "licenseId",
                "licenseText"
            ],
            "properties": {
                "version": {
                    "description": "the version of the library",
                    "type": "string"
                },
                "licenseId": {
                    "description": "an npm/yarn package.json-compatible version identifier (or expression)",
                    "type": "string"
                },
                "licenseText": {
                    "description": "the full text of the license, if available",
                    "oneOf": [
                        {
                            "type": "string"
                        },
                        {
                            "type": "null"
                        }
                    ]
                }
            }
        }
    }
}
